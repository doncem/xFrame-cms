<form name="setup-plugin" method="POST" action="#save/plugin">
    {% for plugin, clazz in section %}
    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <label class="label">{{ plugin }}</label>
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <input class="input" type="text" name="plugin[{{ plugin }}]" placeholder="namespace\class" value="{{ clazz }}" />
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

    <div class="field is-horizontal">
        <div class="field-label">
            <!-- Left empty for spacing -->
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <button class="button is-primary">Verify</button>
                    <button class="button is-secondary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

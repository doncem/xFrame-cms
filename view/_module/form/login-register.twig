<form class="ui form" name="{% if type == 'register' %}register{% else %}login{% endif %}" method="POST" action="{{ type }}">
    <div class="required field">
        <label>Email</label>
        <input type="email" name="{{ type }}-email" placeholder="Email">
    </div>
    {% if type == 'register' %}
    <div class="required field">
        <label>Confirm email</label>
        <input type="email" name="email-confirm" placeholder="Confirm email">
    </div>
    {% else %}
    <div class="required field">
        <label>Password</label>
        <input type="password" name="{{ type }}-password" placeholder="Password">
    </div>
    {% endif %}
    <div class="field">
        <div class="ui checkbox">
            <input type="checkbox" name="terms" class="hidden">
            <label>I agree to the Terms and Conditions</label>
        </div>
    </div>
    <div class="ui left floated primary submit button">Submit</div>
    <a class="ui right floated basic button" href="/register">Register</a>
    <div class="ui clearing hidden divider"></div>
    <div class="ui error message"></div>
</form>

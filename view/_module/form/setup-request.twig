<form name="setup-request" method="POST" action="#save/request">
    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <label class="label">Default View Template *</label>
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <div class="select is-fullwidth">
                        <select name="request-view">
                            <option value="\Xframe\View\TwigView"{% if section.DEFAULT_VIEW == "\Xframe\View\TwigView" %} selected{% endif %}>TwigView</option>
                            <option value="\Xframe\View\JsonView"{% if section.DEFAULT_VIEW == "\Xframe\View\JsonView" %} selected{% endif %}>JsonView</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="field is-horizontal">
        <div class="field-label">
            <label class="label">Auto Rebuild Request Map?</label>
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <label class="radio">
                        <input type="radio" name="request-rebuild" value="yes"{% if section.AUTO_REBUILD %} checked{% endif %}>
                        Yes
                    </label>
                    <label class="radio">
                        <input type="radio" name="request-rebuild" value="no"{% if not section.AUTO_REBUILD %} checked{% endif %}>
                        No
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="field is-horizontal">
        <div class="field-label">
            <!-- Left empty for spacing -->
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <button class="button is-primary">Verify</button>
                    <button class="button is-secondary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

<form class="ui fluid form" name="setup-db" method="POST" action="/setup-save/db">
    <div class="required inline field">
        <div class="ui corner labeled input">
            <div class="ui label">Username</div>
            <input type="text" name="db-username" placeholder="username"{% if db.USERNAME %} value="{{ db.USERNAME }}"{% endif %} />
            <div class="ui corner label">
                <i class="asterisk icon"></i>
            </div>
        </div>
    </div>
    <div class="required inline field">
        <div class="ui corner labeled input">
            <div class="ui label">Password</div>
            <input type="password" name="db-password" placeholder="secret"{% if db.PASSWORD %} value="{{ db.PASSWORD }}"{% endif %} />
            <div class="ui corner label">
                <i class="asterisk icon"></i>
            </div>
        </div>
    </div>
    <div class="required inline field">
        <div class="ui corner labeled input">
            <div class="ui label">Host</div>
            <input type="text" name="db-host" placeholder="localhost"{% if db.HOST %} value="{{ db.HOST }}"{% endif %} />
            <div class="ui corner label">
                <i class="asterisk icon"></i>
            </div>
        </div>
    </div>
    <div class="inline field">
        <div class="ui labeled input">
            <div class="ui label">Port</div>
            <input type="number" name="db-port" placeholder="3306"{% if db.PORT %} value="{{ db.PORT }}"{% endif %} />
        </div>
    </div>
    <div class="required inline field">
        <div class="ui corner labeled input">
            <div class="ui label">Name</div>
            <input type="text" name="db-name" placeholder="cms"{% if db.NAME %} value="{{ db.NAME }}"{% endif %} />
            <div class="ui corner label">
                <i class="asterisk icon"></i>
            </div>
        </div>
    </div>
    <div class="inline field">
        <div class="ui labeled input">
            <div class="ui label">Table prefix</div>
            <input type="text" name="db-prefix" placeholder="x"{% if db.PREFIX %} value="{{ db.PREFIX }}"{% endif %} />
        </div>
    </div>
    <div class="ui green button verify" data-action="verify setup" data-step="db">Verify</div>
    <div class="ui primary button save" data-action="save setup" data-step="db">Save</div>
    <div class="ui error message"></div>
</form>
